mkdir rel
cd rel
rebar create-node nodeid=pegasus

#Build version 1
rebar compile
cd rel
rebar generate
mv com com_0.0.1
cd ..
rebar clean
# start the release:
cd rel/com_0.1
bin/com console

# Now, in another terminal we prepare an upgrade..

# change release version numbers from 0.0.1 to 0.0.2 in
$EDITOR apps/dummy/src/com.app.src
$EDITOR rel/reltool.config

rebar compile
cd rel
rebar generate
rebar generate-appups previous_release=com_0.0.1
rebar generate-upgrade previous_release=com_0.0.1

# Examine contents of upgrade package if you wish:
tar -zvtf com_0.2.tar.gz
mv com com_0.0.2
